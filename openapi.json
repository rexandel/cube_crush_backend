                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/game/scores": {
            "post": {
                "tags": [
                    "Game"
                ],
                "summary": "Отправить новый счет",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ScoreSubmitRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Счет успешно отправлен",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ScoreSubmitResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Ошибка валидации данных",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Неверные учетные данные",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Внутренняя ошибка сервера",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "502": {
                        "description": "Ошибка подключения к базе данных или внешним сервисам",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "503": {
                        "description": "Сервис временно недоступен",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/game/leaderboard": {
            "get": {
                "tags": [
                    "Game"
                ],
                "summary": "Получить таблицу лидеров лучших игроков",
                "responses": {
                    "200": {
                        "description": "Данные таблицы лидеров",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/LeaderboardEntry"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Внутренняя ошибка сервера",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "502": {
                        "description": "Ошибка подключения к базе данных или внешним сервисам",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "503": {
                        "description": "Сервис временно недоступен",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/game/my-scores": {
            "get": {
                "tags": [
                    "Game"
                ],
                "summary": "Получить историю счетов текущего пользователя",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "История счетов пользователя",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/ScoreHistoryEntry"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Неверные учетные данные",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Внутренняя ошибка сервера",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "502": {
                        "description": "Ошибка подключения к базе данных или внешним сервисам",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "503": {
                        "description": "Сервис временно недоступен",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "RegisterRequest": {
                "type": "object",
                "required": [
                    "email",
                    "password",
                    "nickname"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "player@example.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "minLength": 6,
                        "example": "securepassword123"
                    },
                    "nickname": {
                        "type": "string",
                        "minLength": 3,
                        "maxLength": 20,
                        "example": "CubeMaster"
                    }
                }
            },
            "LoginRequest": {
                "type": "object",
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "player@example.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "example": "securepassword123"
                    }
                }
            },
            "ScoreSubmitRequest": {
                "type": "object",
                "required": [
                    "score"
                ],
                "properties": {
                    "score": {
                        "type": "integer",
                        "minimum": 0,
                        "example": 1500
                    }
                }
            },
            "AuthResponse": {
                "type": "object",
                "properties": {
                    "accessToken": {
                        "type": "string",
                        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    },
                    "refreshToken": {
                        "type": "string",
                        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    },
                    "user": {
                        "$ref": "#/components/schemas/UserProfile"
                    }
                }
            },
            "UserProfile": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 123
                    },
                    "email": {
                        "type": "string",
                        "example": "player@example.com"
                    },
                    "nickname": {
                        "type": "string",
                        "example": "CubeMaster"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-01-30T10:30:00Z"
                    }
                }
            },
            "UserProfileWithStats": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 123
                    },
                    "email": {
                        "type": "string",
                        "example": "player@example.com"
                    },
                    "nickname": {
                        "type": "string",
                        "example": "CubeMaster"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-01-30T10:30:00Z"
                    },
                    "stats": {
                        "$ref": "#/components/schemas/UserStats"
                    }
                }
            },
            "UserStats": {
                "type": "object",
                "properties": {
                    "gamesPlayed": {
                        "type": "integer",
                        "example": 42
                    },
                    "bestScore": {
                        "type": "integer",
                        "example": 1500
                    },
                    "averageScore": {
                        "type": "integer",
                        "example": 750
                    },
                    "globalRank": {
                        "type": "integer",
                        "example": 5
                    }
                }
            },
            "LeaderboardEntry": {
                "type": "object",
                "properties": {
                    "rank": {
                        "type": "integer",
                        "example": 1
                    },
                    "nickname": {
                        "type": "string",
                        "example": "TopPlayer"
                    },
                    "score": {
                        "type": "integer",
                        "example": 2500
                    },
                    "achievedAt": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-01-30T12:00:00Z"
                    }
                }
            },
            "ScoreHistoryEntry": {
                "type": "object",
                "properties": {
                    "score": {
                        "type": "integer",
                        "example": 1500
                    },
                    "achievedAt": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-01-30T12:00:00Z"
                    }
                }
            },
            "ScoreSubmitResponse": {
                "type": "object",
                "properties": {
                    "scoreId": {
                        "type": "integer",
                        "example": 456
                    },
                    "newBestScore": {
                        "type": "boolean",
                        "example": true
                    },
                    "globalRank": {
                        "type": "integer",
                        "example": 15
                    },
                    "previousBest": {
                        "type": "integer",
                        "example": 1200
                    }
                }
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string",
                        "description": "Машинно-читаемый код ошибки для логики приложения",
                        "enum": [
                            "USER_ALREADY_EXISTS",
                            "VALIDATION_ERROR",
                            "AUTHENTICATION_FAILED",
                            "INVALID_REFRESH_TOKEN",
                            "REFRESH_TOKEN_EXPIRED",
                            "USER_NOT_FOUND",
                            "DATABASE_UNAVAILABLE",
                            "SERVICE_UNAVAILABLE"
                        ],
                        "example": "USER_ALREADY_EXISTS"
                    },
                    "localizationKey": {
                        "type": "string",
                        "description": "Ключ для локализации в мобильном приложении",
                        "example": "error.user_already_exists"
                    },
                    "timestamp": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-01-30T10:30:00Z"
                    }
                }
            }
        }
    }
}